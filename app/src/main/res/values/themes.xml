<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyNewsApp" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="floatingActionButtonStyle">@style/myFloatingActionButtonStyle</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:dialogTheme">@style/CustomDialog</item>
<!--        <item name="android:colorBackground">#f5f5f5</item>-->
        <!--    preference page dialog -->
        <item name="alertDialogTheme">@style/MyPreferenceDialogTheme</item>
        <item name="textInputStyle">@style/Widget.App.TextInputLayout</item>
    </style>
    <style name="Theme.MyNewsApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.MyNewsApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.MyNewsApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">

        <item name="android:tint">@color/black</item>
    </style>
    <style name="myFloatingActionButtonStyle" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">#c6c6c6</item>

    </style>
    <style name="CustomDialog" parent="@style/Theme.AppCompat.Light.Dialog">
        <item name="android:windowNoTitle">false</item>
    </style>

    <style name="AddFollowingListDialogTheme" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="android:buttonBarPositiveButtonStyle">@style/MyPositiveTextStyle</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/MyNegativeTextStyle</item>
        <item name="colorPrimary">@color/black</item>
    </style>
    <style name="MyPositiveTextStyle" parent="Widget.MaterialComponents.Button.TextButton">

        <item name="android:textColor">@color/black</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Button</item>
    </style>
    <style name="MyNegativeTextStyle" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/black</item>
    </style>

    <!--    text input border color-->
    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <item name="boxStrokeColor">@color/black</item>

        <item name="boxStrokeWidth">2dp</item>
        <item name="hintTextColor">@color/black</item>

    </style>
<!--    override material text input field-->
    <style name="Widget.App.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.TextInputLayout</item>
    </style>
    <style name="ThemeOverlay.App.TextInputLayout" parent="">
        <item name="colorPrimary">@color/black</item>
        <item name="colorOnSurface">@android:color/transparent</item>
        <item name="editTextStyle">@style/Widget.App.TextInputLayout.Edit</item>
    </style>
    <style name="Widget.App.TextInputLayout.Edit" parent="@style/Widget.MaterialComponents.TextInputEditText.FilledBox">

    </style>
<!--    -->
<!--    news page-->
    <style name="roundedImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>
<!--    following list-->
    <style name="followingListItem" parent="">
        <item name="android:backgroundTint">@color/white</item>
    </style>
<!--    preference page dialog -->
    <style name="MyPreferenceDialogTheme" parent="Theme.MaterialComponents.DayNight.Dialog">
        <item name="colorPrimary">@color/black</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:windowMinWidthMinor">80%</item>
    </style>
    <style name="MyChipStyle" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/purple_200</item>
        <item name="colorOnSurface">@color/black</item>
    </style>
</resources>